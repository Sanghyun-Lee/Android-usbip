<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.android.server"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:icon="@drawable/ic_katalk_pc_linker"
        android:label="@string/app_name" >
        
        <activity
            android:name=".KatalkPCLinker"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <receiver android:name=".MyServiceReceiver">
            <intent-filter>
                <action
                    android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <service android:name="org.kandroid.app.hangulkeyboard.SoftKeyboard"
                android:permission="android.permission.BIND_INPUT_METHOD" >
                <intent-filter>
                	<action android:name="android.view.InputMethod"/>
            	</intent-filter>
            <meta-data android:name="android.view.im"
                 android:resource="@xml/method" />
        </service>
        
        <service android:name=".MessageManager">
        </service> 
        
    </application>

</manifest>